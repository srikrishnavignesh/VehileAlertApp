<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/main_color"
    android:layout_height="match_parent">
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    tools:context=".send_fragment">
    <TextView
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name:" />
    <TextView
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:layout_alignTop="@id/name_label"
        android:text="your name here"
        android:layout_toRightOf="@id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"/>
    <TextView
        android:textColor="@color/text_color"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:id="@+id/reg_no_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_label"
        android:text="reg_no: "/>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@id/reg_no_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reg_no"
        android:text="your reg_no number"
        android:textSize="20sp"
        android:layout_toRightOf="@id/reg_no_label"/>
    <TextView
        android:textColor="@color/text_color"
        android:text="contact_no: "
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/reg_no_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cnt_label"/>
    <TextView
        android:id="@+id/cnt"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cnt_label"
        android:textSize="20sp"
        android:layout_toRightOf="@id/cnt_label"
        android:text="your contact_no"/>
    <TextView
        android:textColor="@color/text_color"
        android:text="details: "
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/cnt_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details_label"/>
    <TextView
        android:id="@+id/details"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/details_label"
        android:textSize="20sp"
        android:layout_toRightOf="@id/details_label"
        android:text="your details"/>
    <ImageView
        android:src="@drawable/no_image"
        android:layout_below="@id/details_label"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/img"/>
    <Button
        android:layout_marginTop="5dp"
        android:background="@color/bg_color"
        android:id="@+id/snd"
        android:layout_marginBottom="8dp"
        android:padding="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send"/>
    <ProgressBar
        android:indeterminateTint="@color/bg_color"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:layout_centerInParent="true"/>
</RelativeLayout>
</ScrollView>